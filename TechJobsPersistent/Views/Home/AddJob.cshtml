@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="Name" id="Name" class="form-control" />
        <span></span>
    </div>


    <div class="form-group">
        <label>Employers </label>
        <select asp-for="SelectEmployerId" asp-items="Model.Employers"></select>
        <span></span>

         <a asp-controller="Employer" asp-action="Add">Add A New Employer</a>
    </div>

     <div class="form-group">
        <label>Skills </label>
        <br />
        @foreach (Skill skill in Model.Skills)
        {
             <label>@skill.Name </label>
            <input type="checkbox" name="selectedSkills"  value="@skill.Id" />        
       
        }
         
    </div>

    <input type="submit" value="Add Job" />


      <span>
     <a asp-controller="Skill" asp-action="Add">Add A New Skill</a>
     </span>
</form>




